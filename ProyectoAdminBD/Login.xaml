<Window x:Class="ProyectoAdminBD.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAdminBD"
        mc:Ignorable="d"
        Height="600" Width="560"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border Background="#272537"
            CornerRadius="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Background="#181724" MouseDown="Border_MouseDown" CornerRadius="30,30,0,0">
                <TextBlock Text="Login" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="25"
                       Margin="0,10,0,10"/>
            </Border>
            <Ellipse Fill="Red" 
                     Height="20" 
                     Width="20" 
                     Grid.Row="0"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="10,20"
                     MouseLeftButtonDown="CloseApp" ToolTip="Close" Cursor="Hand"
                     />
            <Ellipse Fill="Yellow" 
                     Height="20" 
                     Width="20" 
                     Grid.Row="0"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="35,20"
                     MouseLeftButtonDown="Minimize" ToolTip="Minimize" Cursor="Hand"
                     />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,50,0,50">
                    <TextBlock x:Uid="User"
                           Text="Usuario"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="25"
                           Foreground="AntiqueWhite" 
                           DockPanel.Dock="Left"/>
                    <Border Margin="15" Padding="5" BorderThickness="1" BorderBrush="Red" Background="White" CornerRadius="20" Width="200" Height="30">
                        <TextBox Width="200" Height="30"  FontSize="15" Foreground="Black" Background="Transparent" BorderThickness="0"/>
                    </Border>
                    <TextBlock x:Uid="User"
                           Text="Contraseña"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="25"
                           Foreground="AntiqueWhite" 
                           DockPanel.Dock="Left"/>
                    <Border Margin="15" Padding="5" BorderThickness="1" BorderBrush="Red" Background="White" CornerRadius="20" Width="200" Height="30">
                        <PasswordBox Width="200" Height="30" BorderThickness="0"/>
                    </Border>

                </StackPanel>
                <Border Grid.Row="1" Grid.Column="1" Background="White" Width="100" Height="30" VerticalAlignment="Bottom" Margin="20" CornerRadius="20">
                    <Button Grid.Row="1" Grid.Column="1" Width="100" Height="30"  Content="Ok" FontSize="18" Background="Transparent" BorderThickness="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
