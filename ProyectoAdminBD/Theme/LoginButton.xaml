<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="***REMOVED***DynamicResource ***REMOVED***x:Static SystemColors.ControlTextBrushKey***REMOVED******REMOVED***" SnapsToDevicePixels="true" StrokeThickness="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
    <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
    <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
    <Style x:Key="ButtonStyle1" TargetType="***REMOVED***x:Type Button***REMOVED***">
        <Style.Resources>
            <Storyboard x:Key="FontSizeIncrease">
                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="20" Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Key="FontSizeDecrease">
                <DoubleAnimation Storyboard.TargetProperty="FontSize" To="18" Duration="0:0:0.2"/>
            </Storyboard>
        </Style.Resources>
        <Setter Property="FocusVisualStyle" Value="***REMOVED***StaticResource FocusVisual***REMOVED***"/>
        <Setter Property="Background" Value="***REMOVED***StaticResource Button.Static.Background***REMOVED***"/>
        <Setter Property="BorderBrush" Value="***REMOVED***StaticResource Button.Static.Border***REMOVED***"/>
        <Setter Property="Foreground" Value="***REMOVED***DynamicResource ***REMOVED***x:Static SystemColors.ControlTextBrushKey***REMOVED******REMOVED***"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="***REMOVED***x:Type Button***REMOVED***">
                    <Border CornerRadius="10"  x:Name="border" Background="#EFDEFF" BorderBrush="***REMOVED***TemplateBinding BorderBrush***REMOVED***" BorderThickness="0" SnapsToDevicePixels="true">
                        <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="***REMOVED***TemplateBinding HorizontalContentAlignment***REMOVED***" Margin="***REMOVED***TemplateBinding Padding***REMOVED***" RecognizesAccessKey="True" SnapsToDevicePixels="***REMOVED***TemplateBinding SnapsToDevicePixels***REMOVED***" VerticalAlignment="***REMOVED***TemplateBinding VerticalContentAlignment***REMOVED***"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                        To="1.2"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard Storyboard="***REMOVED***StaticResource FontSizeIncrease***REMOVED***"/>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                        To="1"
                                        Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                            <BeginStoryboard Storyboard="***REMOVED***StaticResource FontSizeDecrease***REMOVED***"/>
                        </EventTrigger>
                        <Trigger Property="IsDefaulted" Value="true">
                            <Setter Property="BorderBrush" TargetName="border" Value="#EFDEFF"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="border" Value="#DFBDFF"/>
                            <Setter Property="BorderBrush" TargetName="border" Value="#DFBDFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter Property="Background" TargetName="border" Value="#DFBDFF"/>
                            <Setter Property="BorderBrush" TargetName="border" Value="#DFBDFF"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Background" TargetName="border" Value="#DFBDFF"/>
                            <Setter Property="BorderBrush" TargetName="border" Value="#DFBDFF"/>
                            <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="***REMOVED***StaticResource Button.Disabled.Foreground***REMOVED***"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>